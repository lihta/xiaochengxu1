/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.container {
  padding-bottom: 100rpx;
}
.title {
  font-size: 44rpx;
  padding: 10rpx;
}

.content {
  padding: 10rpx 30rpx;
}

.des-p {
  font-size: 30rpx;
  color: #333;
  padding-top: 30rpx;
  letter-spacing: 4rpx;
  line-height: 1.6;
  text-align: justify;
}

.des-img {
  width: 690rpx;
}

.des-img image {
  box-sizing: border-box;
  width: 100%;
  margin: 10rpx;
  padding: 10rpx;
}

.advert {
  font-size: 40rpx;
  background: #ff99ee;
  color: #222;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  width: 100vw;
  justify-content: center;
  align-items: center;
}
.tel {
  color: green;
}

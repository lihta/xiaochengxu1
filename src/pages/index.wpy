    iconList: [
      {
        url: '../static/icon/111.jpg',
        title: '轮胎',
        articleid: 4
      },
      {
        url: '../static/icon/112.jpg',
        title: '保养',
        articleid: 1
      },
      {
        url: '../static/icon/113.jpg',
        title: '维修',
        articleid: 2
      },
      {
        url: '../static/icon/116.jpg',
        title: '充电',
        articleid: 5
      },
      {
        url: '../static/icon/117.jpg',
        title: '救援',
        articleid: 6
      }
    ],
    divide: '../static/divide.jpg'
  },

  onLoad() {
    const app = getApp();
    const db = wx.cloud.database();
    this.getlistData();
    let self = this;
    wx.cloud.callFunction({
      name: 'login',
      data: {},
      success: res => {
        app.$wepy.$options.globalData.openid = res.result.openid;
      },
      fail: err => {
        console.error('[云函数] [login] 调用失败', err);
      }
    });
  },

  computed: {},

  methods: {
    getlistData() {
      let this_ = this;
      const db = wx.cloud.database({
        env: 'production-594426'
      });
      const listCollection = db.collection('yunhanshu1_articlelist');
      listCollection
        .where({
          index: true
        })
        .get()
        .then(
          res => {
            console.log(1111111111111, res);
            this_.listP = res.data;
          },
          err => {
            console.log('err', err);
          }
        );
    },

    godetail(e) {
      let articleid = e.currentTarget.dataset.info.articleid;
      this.$navigate({ url: `/pages/article?articleid=${articleid}` });
    },
    gopopular() {
      console.log(7777);
      wx.switchTab({
        url: `/pages/popular`
      });
      //this.$switchTab({ url: `/pages/popular` });
    }
  },

  created() {}
});
</script>
